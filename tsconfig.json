{
    "compilerOptions": {
        "target": "ES2022", 
        "module": "CommonJS",
        "lib": [
            "ES6",
            "ESNext",
            "ESNext.BigInt"
        ],
        "rootDir": "./src",
        "outDir": "./build",
        "removeComments": true,
        "strict": true,
        "typeRoots": [
            "./src/@types/*.d",
            "./node_modules/@types"
        ],
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./src",
        "paths": {
            "@Apollo": ["./structures/Apollo"],
            "@BaseRouter": ["./structures/BaseRouter"],
            "@Database": ["./structures/Database"],
            "@controllers/*": ["./controllers/*"],
            "@routers/*": ["./routers/*"],
            "@structures/*": ["./structures/*"],
            "@validation": ["./utils/validation"],
            "@utils/*": ["./utils/*"],
            "@models": ["./@types/models"],
            "@inputs": ["./@types/inputs"]
        }
    },
    "exclude": [
        "build",
        "node_modules",
        "package-lock.json",
        "package.json",
        "test"
    ]
}